// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet-postgres
{
    "name": "C# (.NET) and PostgreSQL",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"PKief.material-icon-theme",
				"vscode-icons-team.vscode-icons",
				"adrianwilczynski.user-secrets",
				"vincent-ledu.adr-tools",
				"k--kato.docomment",
				"kreativ-software.csharpextensions",
				"kahole.magit",
				"mhutchie.git-graph",
				"me-dutour-mathieu.vscode-github-actions",
				"GitHub.copilot",
				"eamodio.gitlens",
				"heaths.vscode-guid",
				"yzhang.markdown-all-in-one",
				"bierner.markdown-mermaid",
				"doggy8088.quicktype-refresh",
				"josefpihrt-vscode.roslynator",
				"hoffs.dotnet-secret-explorer",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-pg",
				"ms-azuretools.vscode-docker"
			]
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Configure tool-specific properties.
	// "customizations": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [5432],
	// "portsAttributes": {
	//		"5001": {
	//			"protocol": "https"
	//		}
	// }

    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "dotnet dev-certs https && dotnet restore" // && sudo apt-get update && sudo apt-get install -y dotnet-sdk-8.0 && dotnet restore"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
